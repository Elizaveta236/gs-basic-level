let userName = prompt("Введите ваше имя:"); //Запрашиваем имя пользователя
let yearOfBirth = prompt("Введите год вашего рождения:"); //Запрашиваем год рождения пользователя
let currentYear = new Date().getFullYear(); //встроенный объект Date - для получения текущего года
let ageInNextYear = currentYear - yearOfBirth + 1; //вычисляем возраст пользователя в следующем году путем вычитания года рождения из текущего года и добавления единицы
// Выводим текст, используя шаблонную строку и переменные 'userName' и 'ageInNextYear', чтобы сообщить пользователю сколько ему будет лет в следующем году
console.log(userName + ", уже в следующем году Вам будет " + ageInNextYear + " :-(.");
